<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:clipToPadding="false"
        android:id="@+id/idAct_Main_VP1"
        android:padding="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnMotionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Show me Motion Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idAct_Main_VP1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/hotelAPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demonstrate API"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/idBtnMotionLayout"
        app:layout_constraintStart_toStartOf="@+id/idBtnMotionLayout"
        app:layout_constraintTop_toBottomOf="@+id/idBtnMotionLayout"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/toDOBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="To do List"
        android:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/hotelAPI"
        app:layout_constraintStart_toStartOf="@+id/hotelAPI"
        app:layout_constraintTop_toBottomOf="@+id/hotelAPI" />

</androidx.constraintlayout.widget.ConstraintLayout>